.sticking
  .container
    .row.pb-3.pt-4
      .col-12
        %h4 いしがき歯科の特徴
    - sticking = @sticking.each_slice(2).to_a
    .row.pb-3.pl-2.pr-2
      - sticking.each do |s|
        .col-6.mb-3
          .bg-white-area
            .row.pb-3
              .col-12.title= s[0][:title]
            .row
              .col-12.pb-2= image_tag(s[0][:img], alt: '医院', class: 'sticking-img')
            .row
              .col-12.text=simple_format(s[0][:text])
            - if s[0][:details]
              .row
                .col-4
                .col-8.text.text-right=link_to '詳細はこちら', '#'
        - break if s[1].nil?
        .col-6.mb-3
          .bg-white-area
            .row.pb-2
              .col-12.title= s[1][:title]
            .row
              .col-12.pb-2= image_tag(s[1][:img], alt: '医院', class: 'sticking-img')
            .row
              .col-12.text=simple_format(s[1][:text])
            - if s[1][:details]
              .row
                .col-4
                .col-8.text.text-right=link_to '詳細はこちら', '#'

