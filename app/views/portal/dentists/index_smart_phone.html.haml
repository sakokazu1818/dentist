.container.news
  .row.pt-3
    .col-12.text-center
      %h4 院長からのメッセージ
  .row.pb-3
    .col-12
      .news-table
        %table.table
          %tbody
            - @notification.each do |n|
              %tr
                %td= n.created_at.strftime('%Y/%m/%d')
              %tr
                %td= simple_format(n.text)
.trim.mt-3= image_tag('wave2.png', alt: 'いしがき歯科', class: 'img-wave')
