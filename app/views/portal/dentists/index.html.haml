.bg-h
  .container.pt-3.pb-5
    .row
      .col-12
        .card-deck
          .card
            .card-body
              %h5.card-title
                %i.fas.fa-comment-alt
                %span 院長からのメッセージ
              %p.card-text
                .news-table
                  %table.table
                    %tbody
                      - @notification.each do |n|
                        %tr
                          %td= n.created_at.strftime('%Y/%m/%d')
                        %tr
                          %td= raw Rinku.auto_link(simple_format(n.text))
          .card.b-none
            .card-body
              %h5= link_to image_tag('110499.jpg', { class: 'img-fluid', :border => '0',
                :alt => 'ドクターズファイル'}), 'https://doctorsfile.jp/h/110499/df/1/'

  .container.pt-3
    .row
      .col-12
        %h3
          %span
            -# = image_tag('icon_doctor.png', alt: '', class: 'tc-b-img')
            %i.fas.fa-tooth.pb-1
            %span いしがき歯科の特徴

  - stickings = @sticking.each_slice(2).to_a
  .container
    - stickings.each do |sticking|
      - if sticking.length > 1
        .card-deck
          - sticking.each_with_index do |s, i|
            .card.mb-3
              .card-body
                %h5.card-title= s[:title]
                %p.card-text= image_tag(s[:img], alt: '医院', class: 'sticking-img')
                %p.card-text= simple_format(s[:text])
      - else
        .card-group.hrf
          .card.mb-3.mr-3
            .card-body
              %h5.card-title= sticking[0][:title]
              %p.card-text= image_tag(sticking[0][:img], alt: '医院', class: 'sticking-img')
              %p.card-text= simple_format(sticking[0][:text])
