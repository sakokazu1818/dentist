.bg-h
  .container.pt-3.pb-5
    .row
      .col-6
        .card-deck
          .card
            .card-body
              %h5.card-title
                %i.fas.fa-comment-alt
                %span 院長からのメッセージ
              %p.card-text
                .news-table
                  %table.table
                    %tbody
                      - @notification.each do |n|
                        %tr
                          %td= n.created_at.strftime('%Y/%m/%d')
                        %tr
                          %td= simple_format(n.text)
      .col-6
        %h5= link_to image_tag('110499.jpg', { class: 'img-fluid', :border => '0',
          :alt => 'ドクターズファイル'}), 'https://doctorsfile.jp/h/110499/df/1/'
  .container.pt-3
    .row
      .col-12
        %h3
          %span
            -# = image_tag('icon_doctor.png', alt: '', class: 'tc-b-img')
            %i.fas.fa-tooth.pb-1
            %span いしがき歯科の特徴

  - stickings = @sticking.each_slice(2).to_a
  .container
    - stickings.each do |sticking|
      .card-deck
        - sticking.each_with_index do |s, i|
          .card.mb-3
            .card-body
              %h5.card-title= s[:title]
              %p.card-text= image_tag(s[:img], alt: '医院', class: 'sticking-img')
              %p.card-text= simple_format(s[:text])

  .container.pt-5.mb-3.pb-5
    .card-deck
      .card
        .card-body
          .card-title アクセス
          %p.card-text 〒496-0042
          %p.card-text 愛知県津島市寺前町3丁目21-1
          %p.card-text
            %iframe{:allowfullscreen => "", :frameborder => "0", :height => "400", :src => "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3260.7626734241003!2d136.7355441151482!3d35.18746726450014!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x600398edc0cae3f5%3A0x3c4ac376b43c5257!2z44GE44GX44GM44GN5q2v56eR!5e0!3m2!1sja!2sjp!4v1560217945947!5m2!1sja!2sjp", :style => "border:0", :width => "100%"}
      .card
        .card-body
          %p.card-text 院内風景
          %p.card-text
            %iframe{:allowfullscreen => "", :frameborder => "0", :height => "450", :src => "https://www.google.com/maps/embed?pb=!4v1558424278271!6m8!1m7!1sCAoSLEFGMVFpcFBrazIybnR3OGxZaUtubWpNaHlpSmV3Y2N5YnpyeGxtU2R0eFpM!2m2!1d35.18772203479!2d136.73787814582!3f145.00485225452962!4f-9.72329895937304!5f0.7820865974627469", :style => "border:0", :width => "100%"}
  .container.mb-5.mt-5
    .row
      .col-5
        %span
          = image_tag('logo.png', alt: 'いしがき歯科', class: 'img-fluid')
    .row
      .col-5
        %span
          .tb 　　〒496-0042　愛知県津島市寺前町3-21-1
