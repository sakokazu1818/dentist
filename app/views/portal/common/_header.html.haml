.container
  .row.pt-1
    %h1.col-4= link_to image_tag('logo.png', class: 'img-fluid', alt: 'いしがき歯科'), '/'
    .col-1
    .col-4.pt-3
      = image_tag('medical_hours.png', alt: '診療時間', class: 'img-fluid')
    .col-3.pt-3
      = image_tag('tel.gif', alt: '診療時間', class: 'img-fluid')

- if controller.controller_name == 'dentists'
  .container
    .row
      .col-12
        .clinic-img-wrapper.pt-5{ class: request.from_pc? ? '' : 'clinic-img-wrapper-pad' }
          %ul#fade
            - (2..5).each do |i|
              %li= image_tag("slide#{i}_pc.jpg", alt: '医院', class: i == 1 ? '' : 'none')
