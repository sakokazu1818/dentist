        %nav.navbar.navbar-expand.navbar-light.pr-0.pl-0
          = render partial: 'portal/common/navbar_smart_phone', locals: { contents: @contents_sp }
    %body
      = yield
      = render partial: 'portal/common/footer_smart_phone'
    %footer.container-fluid.fixed-bottom.pr-0.pl-0= render partial: 'portal/common/float_smart_phone'
